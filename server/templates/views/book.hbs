<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book a Session</title>
  <link rel="stylesheet" href="../../book.css">
</head>
<body>
  <header>
    <h1>Book Your Gym Session</h1>
    <p>Select your preferences and schedule your workout!</p>
  </header>
  <main>
    <form action="/book-session" method="POST">
      <!-- Preferred Day Section -->
      <section class="category">
        <h2>Preferred Day</h2>
        <select name="preferredDay" required>
          <option value="">Select a Day</option>
          <option value="Monday">Monday</option>
          <option value="Tuesday">Tuesday</option>
          <option value="Wednesday">Wednesday</option>
          <option value="Thursday" disabled>Thursday (Fully booked)</option>
          <option value="Friday">Friday</option>
          <option value="Saturday">Saturday</option>
          <option value="Sunday" disabled>Sunday (Fully booked)</option>
        </select>
      </section>

      <!-- Exercise Type Section -->
      <section class="category">
        <h2>Exercise Type</h2>
        <select name="exerciseType" required>
          <option value="">Select Exercise Type</option>
          <option value="Cardio">Cardio</option>
          <option value="Strength Training" disabled>Strength Training (Fully booked)</option>
          <option value="Yoga">Yoga</option>
          <option value="Zumba" disabled>Zumba (Fully booked)</option>
          <option value="HIIT">HIIT</option>
          <option value="Pilates">Pilates</option>
          <option value="Weightlifting" disabled>Weightlifting (Fully booked)</option>
          <option value="Spin Class">Spin Class</option>
        </select>
      </section>

      <!-- Preferred Time Slot Section -->
      <section class="category">
        <h2>Preferred Time Slot</h2>
        <select name="timeSlot" required>
          <option value="">Select a Time Slot</option>
          <option value="6:00 AM - 7:00 AM">6:00 AM - 7:00 AM</option>
          <option value="7:00 AM - 8:00 AM" disabled>7:00 AM - 8:00 AM (Fully booked)</option>
          <option value="9:00 AM - 10:00 AM">9:00 AM - 10:00 AM</option>
          <option value="11:00 AM - 12:00 PM">11:00 AM - 12:00 PM</option>
          <option value="2:00 PM - 3:00 PM" disabled>2:00 PM - 3:00 PM (Fully booked)</option>
          <option value="4:00 PM - 5:00 PM">4:00 PM - 5:00 PM</option>
          <option value="6:00 PM - 7:00 PM" disabled>6:00 PM - 7:00 PM (Fully booked)</option>
          <option value="8:00 PM - 9:00 PM">8:00 PM - 9:00 PM</option>
        </select>
      </section>

      <!-- Preferred Trainer Section -->
      <section class="category">
        <h2>Preferred Trainer</h2>
        <select name="trainer" required>
          <option value="">Select a Trainer</option>
          <option value="John Doe">John Doe</option>
          <option value="Jane Smith">Jane Smith</option>
          <option value="Michael Brown">Michael Brown</option>
        </select>
      </section>

      <!-- Session Type Section -->
      <section class="category">
        <h2>Session Type</h2>
        <select name="sessionType" required>
          <option value="">Select Session Type</option>
          <option value="Online">Online</option>
          <option value="Offline">Offline</option>
        </select>
      </section>

      <!-- Submit Button -->
      <div class="book-now">
        <button type="submit">Book Now</button>
      </div>
    </form>
  </main>
  <footer>
    <p>&copy; 2024 Your Gym. All Rights Reserved.</p>
  </footer>
</body>
</html>
